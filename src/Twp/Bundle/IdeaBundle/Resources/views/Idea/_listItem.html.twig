<article class="idea">
    {% include 'TwpIdeaBundle:Idea:_vote.html.twig' with { 'idea': idea } %}
    {% if is_granted('ROLE_USER') %}
        <a class="watch {{ app.user.isWatching(idea.id) ? 'active' : ''  }}" href="{{ path(app.user.isWatching(idea.id) ? 'idea_unwatch' : 'idea_watch', { 'id': idea.id })  }}">{{ app.user.isWatching(idea.id) ? 'Unw' : 'W'  }}atch</a>
    {% endif %}
    <header><a href="{{ path('idea_show', { 'id': idea.id }) }}">{{ idea.title }}</a></header>
    <section>{{ idea.content }}</section>
    <footer>{{ idea.currentStatus }}</footer>
</article>

